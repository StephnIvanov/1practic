#7
year = int(input('Введите год: '))
def vis(year):
    if ((year % 4 == 0) and (year % 100 != 0)) or (year % 400 == 0):
        print('Да')
    else:
        print('Нет')
        return
c = vis(year)
print(c)
#8
a = int(input('Введите первое число: '))
b = int(input('Введите второе число: '))
c = int(input('Введите третье число: '))
def odinak(a,b,c):
    if a == b == c:
        print('3')
    elif a == b or b == c or a == c:
        print('2')
    else:
        print('3')
        return
c = odinak(a,b,c)
print(c)
#9
a = int(input('Введите первое число: '))
b = int(input('Введите второе число: '))
c = int(input('Введите третье число: '))
def odinak(a,b,c):
    if a == b == c:
        print('3')
    elif a == b or b == c or a == c:
        print('2')
    else:
        print('3')
        return
c = odinak(a,b,c)
print(c)
