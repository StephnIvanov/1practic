#2
a = int(input("Введите длину 1 катета треугольника:"))
b = int(input("Введите длину 2 катета треугольника:"))
s = a * b * 0.5
print('Площадь прямоугольного треугольника равна:', s)
#3
n = int(input("Введите сколько прошло минут с начала суток:"))
ch = (n // 60) % 24
minutes = n % 60
if n > 1440:
    print('Error')
else:
    print(ch,':',minutes)
#4
seconds = int(input('Введите колличество секунд '))
day = seconds // (3600*24)
hours = seconds // 3600
minutes = seconds // 60 
second = seconds % 60
print(day,hours,minutes,second)
#5
x = int(input('Введите 1 число '))
z = int(input('Введите 2 число '))
y = int(input('Введите 3 число '))
def null():
    if x < y and x < z:
        print(x)
    elif y < z and y < z:
        print(y)
    elif z < y and z < x:
        print(z)
        return
null()
